{
  "workbench.colorCustomizations": {
    "editorGroup.emptyBackground": "#1A212E",
    "editor.selectionBackground": "#401437",
    "statusBar.background": "#005f5f",
    "statusBar.noFolderBackground": "#005f5f",
    "statusBar.debuggingBackground": "#005f5f",
    "errorLens.errorBackground": "#e4545412",
    "errorLens.warningBackground": "#ff942f12",
    "errorLens.infoBackground": "#00b7e406",
    "errorLens.hintBackground": "#17a2a206",
    "editorIndentGuide.background1": "#3B404800",
    "editorInfo.background": "#00000000",
    "editorInfo.foreground": "#00000000",
    "editorWarning.foreground": "#da8a0000",
    "editorWarning.background": "#00000000",
    "editorError.background": "#00000000",
    "editorError.foreground": "#ff000066",
    "statusBar.foreground": "#ffffff",
    "statusBar.debuggingForeground": "#ffffff",
    "tab.inactiveBackground": "#141A24",
    "tab.border": "#141A24",
    "editor.lineHighlightBackground": "#21283b"
  },
  "workbench.editor.enablePreview": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.settings.openDefaultKeybindings": false,
  "workbench.settings.openDefaultSettings": false,
  "workbench.commandPalette.preserveInput": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "onedark.nvim",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.panel.defaultLocation": "bottom",
  "debug.console.fontSize": 14,
  "debug.internalConsoleOptions": "neverOpen",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.fontFamily": "'Hasklug Nerd Font Mono', monospace",
  "editor.tabSize": 2,
  "editor.formatOnSave": false,
  "editor.mouseWheelZoom": false,
  "editor.fontSize": 16,
  "editor.fontFamily": "'Hasklug Nerd Font Mono',  monospace",
  "editor.fontLigatures": false,
  "editor.renderWhitespace": "trailing",
  "editor.cursorStyle": "block",
  "editor.minimap.scale": 2,
  "editor.cursorSurroundingLines": 4,
  "editor.autoClosingQuotes": "always",
  "editor.autoSurround": "languageDefined",
  "editor.snippetSuggestions": "top",
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.suggest.insertMode": "replace",
  "editor.inlineSuggest.enabled": true,
  "editor.rulers": [
    81,
    121
  ],
  "editor.suggest.localityBonus": true,
  "editor.suggestOnTriggerCharacters": true,
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.parameterHints.cycle": true,
  "editor.parameterHints.enabled": true,
  "editor.tabCompletion": "on",
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "files.insertFinalNewline": true,
  "files.hotExit": "off",
  "files.associations": {
    "*rc": "shellscript"
  },
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "material-icon-theme.hidesExplorerArrows": true,
  "errorLens.messageTemplate": "$source $message $code",
  // "errorLens.enabledDiagnosticLevels": [
  //   "warning",
  //   "info"
  // ],
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": false,
  "emmet.showAbbreviationSuggestions": false,
  "emmet.showExpandedAbbreviation": "always",
  "git.openDiffOnClick": false,
  "git.openRepositoryInParentFolders": "always",
  "git.confirmSync": false,
  "git.autofetch": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "yaml": false
  },
  "vscode-run-rspec-file.custom-command": "ht rspec",
  "search.showLineNumbers": true,
  "search.smartCase": true,
  "search.useGlobalIgnoreFiles": false,
  "window.title": "${dirty}${rootPath} ${activeEditorMedium}",
  // Language integration
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp"
  },
  "ruby.linter.run": "onSave",
  "vim.enableNeovim": true,
  "vim.neovimPath": "/opt/homebrew/bin/nvim",
  "vim.disableExtension": false,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.showcmd": true,
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.inccommand": "append",
  "vim.highlightedyank.enable": true,
  "vim.useSystemClipboard": true,
  "vim.easymotionMarkerBackgroundColor": "#5f0000",
  "vim.history": 1000,
  "vim.statusBarColorControl": true,
  "vim.cursorStylePerMode.insert": "line",
  "vim.handleKeys": {
    "<C-d>": false,
    "<C-e>": false,
  },
  "multiCommand.commands": [
    {
      "command": "multiCommand.replaceWordUnderCursor",
      "sequence": [
        "actions.find",
        "editor.action.startFindReplaceAction"
      ]
    },
    {
      "command": "multiCommand.resetAndGoUp",
      "sequence": [
        "closeFindWidget",
        "extension.vim_escape",
        "workbench.action.focusAboveGroup"
      ]
    },
    {
      "command": "multiCommand.resetAndGoRight",
      "sequence": [
        "closeFindWidget",
        "extension.vim_escape",
        "workbench.action.focusRightGroup"
      ]
    },
    {
      "command": "multiCommand.resetAndGoDown",
      "sequence": [
        "closeFindWidget",
        "extension.vim_escape",
        "workbench.action.focusBelowGroup"
      ]
    },
    {
      "command": "multiCommand.resetAndGoToConsole",
      "sequence": [
        "closeFindWidget",
        "extension.vim_escape",
        "workbench.action.focusBelowGroup"
      ]
    },
    {
      "command": "multiCommand.resetAndGoLeft",
      "sequence": [
        "closeFindWidget",
        "extension.vim_escape",
        "workbench.action.focusLeftGroup"
      ]
    },
    {
      "command": "multiCommand.resetAndGoToExplorer",
      "sequence": [
        "closeFindWidget",
        "extension.vim_escape",
        "workbench.view.explorer"
      ]
    },
  ],
  // Vim mappings
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<leader>",
        "%"
      ],
      "commands": [
        "editor.emmet.action.matchTag"
      ]
    },
    {
      "before": [
        "v"
      ],
      "commands": [
        "editor.action.smartSelect.expand"
      ],
    },
    {
      "before": [
        "V"
      ],
      "commands": [
        "editor.action.smartSelect.shrink"
      ],
    },
    {
      "before": [
        "v",
        "<leader>",
        "h"
      ],
      "after": [
        "^"
      ]
    },
    {
      "before": [
        "v",
        "<leader>",
        "l"
      ],
      "after": [
        "$"
      ]
    },
    {
      "before": [
        "<leader>",
        "h"
      ],
      "after": [
        "^"
      ]
    },
    {
      "before": [
        "<leader>",
        "l"
      ],
      "after": [
        "$"
      ]
    },
    {
      "before": [
        "<S-tab>"
      ],
      "after": [
        "<",
        "g",
        "v"
      ]
    },
    {
      "before": [
        "<tab>"
      ],
      "after": [
        ">",
        "g",
        "v"
      ]
    },
