{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/tmp": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/dist": true,
        "**/.tags": true,
        "**/tags": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/tmp/**": true,
        "**/bower_components/**": true,
        "**/dist/**": true,
        "**/.tags": true,
        "**/tags": true
    },
    // editor / tab sizes
    "editor.tabSize": 2,
    // editor / workbench
    "editor.fontSize": 15,
    "editor.rulers": [79, 99, 119],
    "terminal.integrated.fontFamily": "'Hasklug Nerd Font Mono', 'CodeNewRoman Nerd Font Mono', Hack, Menlo, Monaco, 'Courier New', monospace",
    "terminal.integrated.rendererType": "canvas",
    "editor.fontFamily": "'Hasklug Nerd Font Mono', 'CodeNewRoman Nerd Font Mono', Hack, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.renderWhitespace": "boundary",
    "editor.cursorStyle": "block",
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#343D46",
        "statusBar.background": "#5f0000",
        "statusBar.noFolderBackground": "#5f0000",
        "statusBar.debuggingBackground": "#5f0000"
    },
    "window.zoomLevel": 0,
    // vim
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.showcmd": true,
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.highlightedyank.enable": true,
    "vim.useSystemClipboard": true,
    "vim.easymotionMarkerFontFamily": "'CodeNewRoman Nerd Font Mono', Hack, Menlo, Monaco, 'Courier New', monospace",
    "vim.easymotionMarkerFontSize": "16",
    "vim.easymotionMarkerBackgroundColor": "#5f0000",
    "vim.statusBarColorControl": true,
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "v",
                "<leader>",
                "h"
            ],
            "after": [
                "^"
            ]
        },
        {
            "before": [
                "v",
                "<leader>",
                "l"
            ],
            "after": [
                "$"
            ]
        },
        {
            "before": [
                "<leader>",
                "h"
            ],
            "after": [
                "^"
            ]
        },
        {
            "before": [
                "<leader>",
                "l"
            ],
            "after": [
                "$"
            ]
        },
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "k"
            ],
            "after": [
                "<esc>"
            ]
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "K"
            ],
            "after": [
                "5",
                "k",
                "zz"
            ]
        },
        {
            "before": [
                "J"
            ],
            "after": [
                "5",
                "j",
                "zz"
            ]
        },
        {
            "before": [
                "leader",
                "r"
            ],
            "commands": ["editor.action.rename"]
        },
        {
            "before": [
                "leader",
                "y"
            ],
            "commands": ["editor.action.clipboardCopyAction"]
        },
        {
            "before": [
                "<leader>",
                "a"
            ],
            "commands": [
                "extension.jumpToTest"
            ]
        },
        {
            "before": [
                "<leader>",
                "%"
            ],
            "commands": [
                "editor.emmet.action.matchTag"
            ]
        },
        // {
        //     "before": [
        //         "/"
        //     ],
        //     "commands": [
        //         "actions.find"
