{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/tmp": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/dist": true,
        "**/.tags": true,
        "**/tags": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/tmp/**": true,
        "**/bower_components/**": true,
        "**/dist/**": true,
        "**/.tags": true,
        "**/tags": true
    },
    // editor / tab sizes
    "editor.tabSize": 2,
    // editor / workbench
    "editor.fontSize": 15,
    "editor.rulers": [80, 120],
    "terminal.integrated.fontFamily": "'Hasklug Nerd Font Mono', 'CodeNewRoman Nerd Font Mono', Hack, Menlo, Monaco, 'Courier New', monospace",
    "terminal.integrated.rendererType": "dom",
    "editor.fontFamily": "'Hasklug Nerd Font Mono', 'CodeNewRoman Nerd Font Mono', Hack, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.renderWhitespace": "boundary",
    "editor.cursorStyle": "block",
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#343D46",
        "statusBar.background": "#005f5f",
        "statusBar.noFolderBackground": "#005f5f",
        "statusBar.debuggingBackground": "#005f5f"
    },
    "window.zoomLevel": 0,
    // vim
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.showcmd": true,
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.highlightedyank.enable": true,
    "vim.useSystemClipboard": true,
    "vim.easymotionMarkerFontFamily": "'CodeNewRoman Nerd Font Mono', Hack, Menlo, Monaco, 'Courier New', monospace",
    "vim.easymotionMarkerFontSize": "16",
    "vim.easymotionMarkerBackgroundColor": "#5f0000",
    "vim.statusBarColorControl": true,
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "v",
                "<leader>",
                "h"
            ],
            "after": [
                "^"
            ]
        },
        {
            "before": [
                "v",
                "<leader>",
                "l"
            ],
            "after": [
                "$"
            ]
        },
        {
            "before": [
                "<leader>",
                "h"
            ],
            "after": [
                "^"
            ]
        },
        {
            "before": [
                "<leader>",
                "l"
            ],
            "after": [
                "$"
            ]
        },
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "k"
            ],
            "after": [
                "<esc>"
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        // {
        //     "before": [
        //         "<leader>",
        //         "r"
        //     ],
        //     "after": [
        //         "y",
        //         "i",
        //         "w",
        //         "/",
        //         "<C-r>",
        //         "\"",
        //     ]
        // },
        {
            "before": [
                "<leader>",
                "a"
            ],
            "commands": [
                "extension.jumpToTest"
            ]
        },
        {
            "before": [
                "<leader>",
                "%"
            ],
            "commands": [
                "editor.emmet.action.matchTag"
            ]
        },
        // {
        //     "before": [
        //         "/"
        //     ],
        //     "commands": [
        //         "actions.find"
        //     ]
        // },
        {
            "before": [
                "n"
            ],
            "commands": [
                "search.action.focusNextSearchResult"
            ]
        },
        {
            "before": [
                "<C-k>",
                "<C-e>"
            ],
            "commands": [
                "filesExplorer.findInWorkspace"
            ]
        },
        {
            "before": [
                "v",
                "<space>",
                "h"
            ],
            "after": [
                "v",
                "^"
            ],
        },
        {
            "before": [
                "v",
                "<space>",
                "l"
            ],
            "after": [
                "v",
                "$"
            ],
        },
        {
            "before": [
                "[",
                "e"
            ],
            "commands": [
                "editor.action.marker.prev"
            ],
        },
        {
            "before": [
                "]",
                "e"
            ],
            "commands": [
                "editor.action.marker.next"
            ],
        },
        {
            "before": [
                "[",
                "g"
            ],
            "commands": [
                "workbench.action.compareEditor.previousChange"
            ],
        },
        {
            "before": [
                "]",
                "g"
            ],
            "commands": [
                "workbench.action.compareEditor.nextChange"
            ],
        },
        {
            "before": [
                ":"
            ],
            "commands": [
                "vim.showQuickpickCmdLine",
            ]
        },
        {
            "before": [
                "K"
            ],
            "commands": [
                "editor.action.showHover"
            ],
        },
        {
            "before": [
                "<C-w>",
                "m"
            ],
            "commands": [
                "workbench.action.toggleMaximizedPanel"
            ]
        },
        {
            "before": [
                "<leader>",
                "h"
            ],
            "after": [
                "^"
            ]
        },
        {
            "before": [
                "<leader>",
                "l"
            ],
            "after": [
                "$"
            ]
        },
        {
            "before": [
                "<leader>",
                "j"
            ],
            "after": [
                "i",
                "<CR>",
                "<Esc>"
            ]
        },
        {
            "before": [
                "<leader>",
                "k"
            ],
            "after": [
                "k",
                "J"
            ]
        },
        {
            "before": [
                "n"
            ],
            "after": [
                "n",
                "z",
                "z"
            ]
        },
        {
            "before": [
                "N"
            ],
            "after": [
                "N",
                "z",
                "z"
            ]
        },
    ],
    "zenMode.hideTabs": false,
    "zenMode.hideStatusBar": false,
    "workbench.editor.enablePreview": false,
    "vim.disableExtension": false,
    "explorer.confirmDelete": false,
    "workbench.colorTheme": "Atom One Dark",
    "workbench.startupEditor": "newUntitledFile",
    "editor.minimap.enabled": false,
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": false,
    "workbench.iconTheme": "material-icon-theme",
    "editor.snippetSuggestions": "top",
}