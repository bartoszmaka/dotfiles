{
  "suggest.numberSelect": false,
  "suggest.languageSourcePriority": 99,
  "suggest.noselect": true,
  "yank.priority": 85,
  "coc.source.file.priority": 10,
  "coc.source.syntax.priority": 4,
  "coc.source.around.priority": 3,
  "coc.source.buffer.priority": 1,
  "suggest.lowPrioritySourceLimit": 5,

  "snippets.extends": {
    "javascriptreact": ["javascript", "html", "typescript", "typescriptreact"],
    "typescriptreact": ["javascript", "html", "typescript", "javascriptreact"],
    "javascript": ["javascriptreact", "html", "typescript", "typescriptreact"],
    "typescript": ["javascript", "html", "typescriptreact", "javascriptreact"],
    "vue": ["javascript", "html", "typescript"],
    "eruby": ["javascript", "typescript", "html"]
  },

  "languageserver": {
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform"],
      "initializationOptions": {}
    }
  },
  "snippets.loadFromExtensions": false,
  "snippets.ultisnips.enable": true,
  "snippets.userSnippetsDirectory": "~/.repos/dotfiles/vim/cocSnippets",

  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.bracketEnterImprove": true,

  // "diagnostic.displayByAle": true,
  // "diagnostic-languageserver.mergeConfig": true,
  "diagnostic.enable": true,
  "diagnostic.warningSign": "ðŸš¨",
  "diagnostic.infoSign": "ðŸ¤”",
  "diagnostic.errorSign": "ðŸ¤”",
  "diagnostic.hintSign": "ðŸ¤”",

  // diagnostic-languageserver
  "diagnostic-languageserver.filetypes": {
    "eruby":          ["rubocop"],
    "ruby":           ["rubocop"],
    "javascript":     ["eslint"],
    "vue":            ["eslint"],
    "javascript.jsx": ["eslint"],
    "typescript":     ["eslint"],
    "typescript.tsx": ["eslint"],
    "vim":            ["remove_trailing_lines", "trim_whitespace"],
    "json":           ["jq"],
    "python":         ["yapf"],
    "css":            ["stylelint"],
    "sass":           ["stylelint"],
    "scss":           ["stylelint"],
    "terraform":      ["terraform"]
  },
  "diagnostic-languageserver.formatFiletypes": {
    "eruby":          "rubocop",
    "ruby":           "rubocop",
    "javascript":     "eslint",
    "vue":            "eslint",
    "javascript.jsx": "eslint",
    "typescript":     "eslint",
    "typescript.tsx": "eslint",
    "scss":           "stylelint",
    "css":            "stylelint"
  },

  "diagnostic-languageserver.linters": {
    "eslint": {
      "command": "./node_modules/.bin/eslint",  // this will find local eslint first, if local eslint not found, it
      "rootPatterns": [
        ".git"
      ],
      "debounce": 100,
      "args": [
        "--stdin",
        "--stdin-filename",
        "%filepath",
        "--format",
        "json"
      ],
      "sourceName": "eslint",
      "parseJson": {
        "errorsRoot": "[0].messages",
        "line": "line",
        "column": "column",
        "endLine": "endLine",
        "endColumn": "endColumn",
        "message": "${message} [${ruleId}]",
        "security": "severity"
      },
      "securities": {
        "2": "error",
        "1": "warning"
      }
    }
  },

  "diagnostic-languageserver.formatters": {
    "eslint": {
      "command": "./node_modules/.bin/eslint",  // this will find local eslint first, if local eslint not found, it
      "rootPatterns": [
        ".git"
      ],
      "debounce": 100,
      "args": [
        "--stdin",
        "--stdin-filename",
        "%filepath",
        "--fix"
      ],
      "sourceName": "eslint",
      "parseJson": {
        "errorsRoot": "[0].messages",
        "line": "line",
        "column": "column",
        "endLine": "endLine",
        "endColumn": "endColumn",
        "message": "${message} [${ruleId}]",
        "security": "severity"
      },
      "securities": {
        "2": "error",
        "1": "warning"
      }
    }
  },

  "solargraph.hover": true,
  "solargraph.formatting": true,
  "solargraph.references": true,
  "solargraph.diagnostics": true,
  "solargraph.definitions": true,
  "solargraph.completion": true,
  "solargraph.checkGemVersion": false,

  "git.enableGutters": true,
  "git.addGBlameToBufferVar": true,
  "git.addGBlameToVirtualText": false,
  "git.changedSign.text": "â”ƒ",
  "git.addedSign.text": "â”ƒ",
  "git.removedSign.text": "â”ƒ",
  "git.topRemovedSign.text": "â”ƒ",
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "yank.enableCompletion": false,
  // "git.addGlameToVirtualText": true,

  "coc.preferences.extensionUpdateCheck": "never",
  // switch to coc-emmet once coc-snippets supports t variable
  "emmet.showExpandedAbbreviation": "always",
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.showAbbreviationSuggestions": true,
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact"
  }
}
