{
  "snippets.extends": {
    "javascriptreact": ["javascript", "html"],
    "typescript": ["javascript"]
  },

  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "tabnine.priority": 100,
  "coc.source.around.priority": 3,
  "coc.source.syntax.priority": 2,
  "coc.preferences.bracketEnterImprove": false,

  "diagnostic.displayByAle": true,
  "diagnostic.enable": true,

  "solargraph.hover": true,
  "solargraph.formatting": true,
  "solargraph.references": true,
  "solargraph.diagnostics": false,
  "solargraph.definitions": true,
  "solargraph.completion": true,
  "solargraph.checkGemVersion": false,

  "git.enableGutters": true,
  "git.addGlameToBufferVar": true,
  "git.changedSign.text": "┃",
  "git.addedSign.text": "┃",
  "git.removedSign.text": "┃",
  "git.topRemovedSign.text": "┃",
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  // "git.addGlameToVirtualText": true,

  "coc.preferences.extensionUpdateCheck": "daily"
}
